<section class="section">
  <div class="container">
    <h1 class="title is-3">Reportar contenido</h1>

    <%= form_with model: [@reportable, @report], local: true do |f| %>
      <div class="field">
        <label class="label">Motivo del reporte</label>
        <div class="select">
          <%= f.select :reason, Report::REASONS, {}, class: "select" %>
        </div>
        <% if @report.errors[:reason].any? %>
          <p class="help is-danger"><%= @report.errors[:reason].join(', ') %></p>
        <% end %>
      </div>

      <div class="field">
        <div class="control">
        <%= button_tag type: 'submit', class: "button is-danger" do %>
          <i class="fa-solid fa-triangle-exclamation"></i> Enviar reporte
        <% end %>
        <%= link_to "Cancelar", request.referer || root_path, class: "button" %>
      </div>
      </div>
    <% end %>
  </div>
</section>
