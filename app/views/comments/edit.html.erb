<section class="section">
  <div class="container">
    <h1 class="title is-2">Post: <%= @post.title %></h1>
    <br>
    <h1 class="title is-4">Editar Comentario</h1>

    <%= form_with(model: [ @post, @comment ], local: true) do |form| %>
      <div class="field">
        <%= form.label :content, "Contenido", class: "label" %>
        <div class="control">
          <%= form.text_area :content, class: "textarea", rows: 3 %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= form.submit "Actualizar comentario", class: "button is-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</section>
