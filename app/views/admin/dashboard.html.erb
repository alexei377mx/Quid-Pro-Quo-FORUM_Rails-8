<section class="section">
  <div class="container">
    <h1 class="title has-text-centered">
      <i class="fas fa-tools"></i> <%= t('admin.dashboard.title') %>
    </h1>

    <div class="tabs is-centered is-boxed">
      <ul>
        <li class="<%= 'is-active' if @tab == 'reports' %>">
          <%= link_to admin_path(tab: 'reports') do %>
            <span class="icon is-small"><i class="fas fa-flag"></i></span>
            <span><%= t('admin.dashboard.tabs.reports') %></span>
          <% end %>
        </li>
        <li class="<%= 'is-active' if @tab == 'radios' %>">
          <%= link_to admin_path(tab: 'radios') do %>
            <span class="icon is-small"><i class="fas fa-broadcast-tower"></i></span>
            <span><%= t('admin.dashboard.tabs.radios') %></span>
          <% end %>
        </li>
        <li class="<%= 'is-active' if @tab == 'contact_messages' %>">
          <%= link_to admin_path(tab: 'contact_messages') do %>
            <span class="icon is-small"><i class="fas fa-envelope-open-text"></i></span>
            <span><%= t('admin.dashboard.tabs.contact_messages') %></span>
          <% end %>
        </li>
        <li class="<%= 'is-active' if @tab == 'logs' %>">
          <%= link_to admin_path(tab: 'logs') do %>
            <span class="icon is-small"><i class="fas fa-history"></i></span>
            <span><%= t('admin.dashboard.tabs.logs') %></span>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="box">
      <% case @tab %>
      <% when "radios" %>
        <%= render partial: "admin/radios" %>
      <% when "reports" %>
        <%= render partial: "admin/reports" %>
      <% when "contact_messages" %>
        <%= render partial: "admin/contact_messages" %>
      <% when "logs" %>
        <%= render partial: "admin/logs" %>
      <% end %>
    </div>
  </div>
</section>
