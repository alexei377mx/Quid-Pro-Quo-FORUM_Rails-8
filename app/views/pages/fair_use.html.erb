<section class="section">
  <div class="container content">
    <h1 class="title is-2">
      <i class="fa-solid fa-scale-balanced"></i> <%= t('fair_use.title') %>
    </h1>
    <p class="subtitle is-5 has-text-grey-dark"><%= t('fair_use.last_updated') %></p>

    <hr>

    <h2 class="title is-4">
      <i class="fa-solid fa-bullseye"></i> <%= t('fair_use.sections.scope.title') %>
    </h2>
    <p><%= t('fair_use.sections.scope.content') %></p>

    <h2 class="title is-4">
      <i class="fa-solid fa-user-lock"></i> <%= t('fair_use.sections.account_responsibility.title') %>
    </h2>
    <ul>
      <% t('fair_use.sections.account_responsibility.points').each do |point| %>
        <li><%= point %></li>
      <% end %>
    </ul>

    <h2 class="title is-4">
      <i class="fa-solid fa-ban"></i> <%= t('fair_use.sections.prohibited_content.title') %>
    </h2>
    <ul>
      <% t('fair_use.sections.prohibited_content.points').each do |point| %>
        <li><%= point %></li>
      <% end %>
    </ul>

    <h2 class="title is-4">
      <i class="fa-solid fa-shield-halved"></i> <%= t('fair_use.sections.moderation.title') %>
    </h2>
    <p><%= t('fair_use.sections.moderation.content') %></p>

    <h2 class="title is-4">
      <i class="fa-solid fa-flag"></i> <%= t('fair_use.sections.reports.title') %>
    </h2>
    <p><%= t('fair_use.sections.reports.content') %></p>

    <h2 class="title is-4">
      <i class="fa-solid fa-comments"></i> <%= t('fair_use.sections.comments.title') %>
    </h2>
    <p><%= t('fair_use.sections.comments.content') %></p>

    <h2 class="title is-4">
      <i class="fa-solid fa-trash"></i> <%= t('fair_use.sections.content_removal.title') %>
    </h2>
    <p><%= t('fair_use.sections.content_removal.content') %></p>

    <h2 class="title is-4">
      <i class="fa-solid fa-user-slash"></i> <%= t('fair_use.sections.sanctions.title') %>
    </h2>
    <ul>
      <% t('fair_use.sections.sanctions.points').each do |point| %>
        <li><%= point %></li>
      <% end %>
    </ul>

    <h2 class="title is-4">
      <i class="fa-solid fa-file-shield"></i> <%= t('fair_use.sections.content_ownership.title') %>
    </h2>
    <p><%= t('fair_use.sections.content_ownership.content') %></p>

    <h2 class="title is-4">
      <i class="fa-solid fa-gavel"></i> <%= t('fair_use.sections.policy_changes.title') %>
    </h2>
    <p><%= t('fair_use.sections.policy_changes.content') %></p>

    <h2 class="title is-4">
      <i class="fa-solid fa-envelope"></i> <%= t('fair_use.sections.contact.title') %>
    </h2>
    <p><%= t('fair_use.sections.contact.content') %></p>

    <hr>
    <p class="has-text-centered is-size-6">
      <i class="fa-solid fa-circle-check"></i> <%= t('fair_use.acceptance') %>
    </p>
  </div>
</section>
