<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">
          <i class="fa-solid fa-user-plus"></i> Registrar nuevo usuario
        </h1>

        <%= form_with(model: @user, local: true) do |form| %>
          <div class="field">
            <%= form.label :name, @user.class.human_attribute_name(:name), class: "label" %>
            <div class="control has-icons-left">
              <%= form.text_field :name, class: "input #{'is-danger' if @user.errors[:name].any?}", placeholder: "Tu nombre" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-user"></i>
              </span>
            </div>
            <% if @user.errors[:name].any? %>
              <small class="help is-danger"><%= @user.errors[:name].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :username, @user.class.human_attribute_name(:username), class: "label" %>
            <div class="control has-icons-left">
              <%= form.text_field :username, class: "input #{'is-danger' if @user.errors[:username].any?}", placeholder: "Tu nombre de usuario" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-user-tag"></i>
              </span>
            </div>
            <% if @user.errors[:username].any? %>
              <small class="help is-danger"><%= @user.errors[:username].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :email, @user.class.human_attribute_name(:email), class: "label" %>
            <div class="control has-icons-left">
              <%= form.email_field :email, class: "input #{'is-danger' if @user.errors[:email].any?}", placeholder: "Tu correo electrónico" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-envelope"></i>
              </span>
            </div>
            <% if @user.errors[:email].any? %>
              <small class="help is-danger"><%= @user.errors[:email].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :password, @user.class.human_attribute_name(:password), class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :password, class: "input #{'is-danger' if @user.errors[:password].any?}", placeholder: "Tu contraseña" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:password].any? %>
              <small class="help is-danger"><%= @user.errors[:password].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :password_confirmation, @user.class.human_attribute_name(:password_confirmation), class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :password_confirmation, class: "input #{'is-danger' if @user.errors[:password_confirmation].any?}", placeholder: "Confirma tu contraseña" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:password_confirmation].any? %>
              <small class="help is-danger"><%= @user.errors[:password_confirmation].join(", ") %></small>
            <% end %>
          </div>

          <div class="columns is-centered">
            <div class="column is-narrow">
              <div class="field">
                <% if @show_checkbox_recaptcha %>
                  <%= recaptcha_tags(site_key: Rails.application.credentials.dig(:recaptcha, :site_key_v2)) %>
                <% else %>
                  <%= recaptcha_v3(action: 'registration', site_key: Rails.application.credentials.dig(:recaptcha, :site_key_v3)) %>
                <% end %>
              </div>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= button_tag type: 'submit', class: "button is-primary is-fullwidth" do %>
                <span class="icon"><i class="fa-solid fa-user-plus"></i></span>
                <span>Registrarse</span>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="has-text-centered mt-4">
          <%= link_to login_path, class: "has-text-link", data: { turbo: false } do %>
            <i class="fa-solid fa-right-to-bracket"></i> ¿Ya tienes cuenta? Inicia sesión
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>