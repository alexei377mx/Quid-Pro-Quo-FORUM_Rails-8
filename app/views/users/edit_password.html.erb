<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">
          <i class="fa-solid fa-lock"></i> <%= t("users.password.edit.title") %>
        </h1>

        <%= form_with(model: @user, url: update_password_path, method: :patch, local: true) do |form| %>
          <div class="field">
            <%= form.label :current_password, t("users.password.edit.current_password"), class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :current_password, class: "input #{'is-danger' if @user.errors[:current_password].any?}", required: true, placeholder: t("users.password.edit.current_password_placeholder") %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:current_password].any? %>
              <small class="help is-danger"><%= @user.errors[:current_password].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :password, t("users.password.edit.new_password"), class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :password, class: "input #{'is-danger' if @user.errors[:password].any?}", required: true, placeholder: t("users.password.edit.new_password_placeholder") %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:password].any? %>
              <small class="help is-danger"><%= @user.errors[:password].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :password_confirmation, t("users.password.edit.confirm_password"), class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :password_confirmation, class: "input #{'is-danger' if @user.errors[:password_confirmation].any?}", required: true, placeholder: t("users.password.edit.confirm_password_placeholder") %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:password_confirmation].any? %>
              <small class="help is-danger"><%= @user.errors[:password_confirmation].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
              <%= button_tag type: 'submit', class: "button is-primary is-fullwidth" do %>
                <span class="icon"><i class="fa-solid fa-lock"></i></span>
                <span><%= t("users.password.edit.submit") %></span>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="has-text-centered mt-4">
          <%= link_to profile_path, class: "has-text-link" do %>
            <span class="icon"><i class="fa-solid fa-arrow-left"></i></span>
            <span><%= t("users.password.edit.back") %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>