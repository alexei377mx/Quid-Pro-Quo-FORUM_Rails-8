<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title">
          <i class="fa-solid fa-lock"></i> Cambiar Contraseña
        </h1>

        <%= form_with(model: @user, url: update_password_path, method: :patch, local: true) do |form| %>
          <div class="field">
            <%= form.label :current_password, "Contraseña Actual", class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :current_password, class: "input #{'is-danger' if @user.errors[:current_password].any?}", required: true, placeholder: "Tu contraseña actual" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:current_password].any? %>
              <small class="help is-danger"><%= @user.errors[:current_password].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :password, "Nueva Contraseña", class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :password, class: "input #{'is-danger' if @user.errors[:password].any?}", required: true, placeholder: "Tu nueva contraseña" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:password].any? %>
              <small class="help is-danger"><%= @user.errors[:password].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <%= form.label :password_confirmation, "Confirmar Nueva Contraseña", class: "label" %>
            <div class="control has-icons-left">
              <%= form.password_field :password_confirmation, class: "input #{'is-danger' if @user.errors[:password_confirmation].any?}", required: true, placeholder: "Confirma tu nueva contraseña" %>
              <span class="icon is-small is-left">
                <i class="fa-solid fa-lock"></i>
              </span>
            </div>
            <% if @user.errors[:password_confirmation].any? %>
              <small class="help is-danger"><%= @user.errors[:password_confirmation].join(", ") %></small>
            <% end %>
          </div>

          <div class="field">
            <div class="control">
              <%= button_tag type: 'submit', class: "button is-primary is-fullwidth" do %>
                <span class="icon"><i class="fa-solid fa-lock"></i></span>
                <span>Cambiar Contraseña</span>
              <% end %>
            </div>
          </div>
        <% end %>

        <div class="has-text-centered mt-4">
          <%= link_to profile_path, class: "has-text-link" do %>
            <span class="icon"><i class="fa-solid fa-arrow-left"></i></span>
            <span>Volver</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>