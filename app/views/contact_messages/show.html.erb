<section class="section">
  <div class="container">
    <h1 class="title"><i class="fas fa-envelope"></i> <%= t("contact_messages.show.title") %></h1>

    <div class="box">
      <p><strong><%= t("contact_messages.show.name") %>:</strong> <%= @contact_message.name %></p>
      <p><strong><%= t("contact_messages.show.email") %>:</strong> <%= @contact_message.email %></p>
      <p><strong><%= t("contact_messages.show.subject") %>:</strong> <%= @contact_message.subject %></p>
      <p><strong><%= t("contact_messages.show.message") %>:</strong></p>
      <pre><%= @contact_message.message %></pre>
      <p class="has-text-grey-light">
        <%= t("contact_messages.show.sent_at", date: l(@contact_message.created_at, format: :long)) %>
      </p>
    </div>

    <%= link_to t("contact_messages.show.back_to_panel"), admin_path(tab: "contact_messages"), class: "button is-light" %>
  </div>
</section>
